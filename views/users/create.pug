extends ../layouts/header.pug

block content
            
    h1(class="text-center") Create user

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action = "/users/create", method = "POST", enctype="multipart/form-data")
        label(for = "name") Name
        br
        input#name(name="name", type="text", class="form-control", value = values ? values.name : '')
        br
        label(for = "email") Email
        br
        input#email(name="email", type="email", class="form-control", value = values ? values.email : '')
        br
        label(for = "address") Address
        br
        input#address(name="address", type="text", class="form-control", value = values ? values.address : '')
        br
        label(for = "avatar") Avatar
        br
        input#avatar(name="avatar", type="file", class="form-control-file")
        br
        button(class="btn btn-primary btn-block btn-lg") Create