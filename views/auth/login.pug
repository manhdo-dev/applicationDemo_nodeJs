extends ../layouts/header.pug

block content
            
    h1(class="text-center") Login

    if errors
        each error in errors
            .alert.alert-danger= error

    form(method = "POST")
        label(for = "email") Email
        br
        input#email(name="email", type="email", class="form-control", value = values ? values.email : '')
        br
        label(for = "password") Password
        br
        input#password(name="password", type="password", class="form-control", value = values ? values.password : '')
        br
        button(class="btn btn-primary btn-block btn-lg") Login